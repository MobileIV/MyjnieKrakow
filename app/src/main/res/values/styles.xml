<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorError">@color/colorError</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.MaterialComponents">
        <item name="android:title" />
    </style>

    <style name="AppTheme.PopupOverlay" parent="Theme.MaterialComponents"/>

</resources>
